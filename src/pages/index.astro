---
import Layout from '../layouts/Layout.astro';
import "../style/global.css"


// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.

type ProjectType = {
	title: string;
	description: string;
	year: number;
	link: string;
};

const projects: ProjectType[] = [
	{
		title: "Project One",
		description: "This is a description of project one.",
		year: 2023,
		link: "#"
	},
	{
		title: "Project Two",
		description: "This is a description of project two.",
		year: 2024,
		link: "#"
	},
	{
		title: "Project Three",
		description: "This is a description of project three.",
		year: 2024,
		link: "#"
	}
];

type ExperienceType = {
	company: string;
	role: string;
	description: string;
	location: string;
	time: string;
}

const experience: ExperienceType[] = [
	{
		company: "Company One",
		role: "Frontend Developer",
		description: "Worked as a Frontend Developer.",
		location: "Remote",
		time: "Jan 2022 - Dec 2022",
	},
	{
		company: "Company Two",
		role: "Fullstack Developer",
		description: "Worked as a UI/UX Designer.",
		location: "Remote",
		time: "Jan 2023 - Present",
	}
]
---

<Layout>
	<!-- <Welcome /> -->
	 <div class="flex flex-col min-h-64 justify-between">
		 <!-- <div class="group flex flex-row gap-4 items-center mb-4">
			</div> -->
			<div class="flex flex-col gap-4">
				<img src="/profile.png" alt="Profile Picture" width="150" height="150" class="rounded-2xl grayscale hover:grayscale-0 hover:transition-all duration-700 ease-in-out h-12 w-12" />
				<div class="flex flex-col gap-2 relative">
					<h1 class="text-xl font-semibold">Hi all, Alfazh here!</h1>
					<div class="absolute h-4 w-36 bg-linear-to-r from-cyan-300 to-cyan-50 top-2 left-14 -rotate-2 -z-10"/>
					<p class="sm:max-w-xl w-full">I'm FrontEnd Developer Based in Surabaya, Indonesia.
						 I love to create things for the web and always excited to learn new technologies.
					</p>
				</div>
			</div>

		<a href="/about" class="">About</a>
		<a href="mailto:alfazh.work@gmail.com">Email Me</a>
	 </div>

	 <div class="flex flex-col gap-2 mt-8">
		<div>
			<h1 class="text-xl font-semibold">Projects</h1>
			<p class="font-extralight">Here are some of the projects I've worked on recently.</p>
		</div>
		<div class="flex flex-col gap-4">
			{projects.map((project, id) => (
				<div>
					<div class="max-w-96">
						<div class="flex justify-between items-center mb-1">
							<h4 class="font-semibold">{project.title}</h4>
							<span class="bg-slate-200 rounded-sm text-slate-500 text-sm px-2">{project.year}</span>
						</div>
						<p class="font-light">{project.description}</p>
					</div>
					<a href={project.link} class="underline flex mt-4">link</a>
				</div>
			))}
		</div>
	 </div>

	 <div class="flex flex-col gap-2 mt-8">
		<h1 class="text-xl font-semibold">Blog</h1>
		<div class="flex flex-col gap-4">
			{projects.map((project, id) => (
				<div>
					<div class="max-w-96">
						<a href={project.link} class="group flex items-center gap-2 mb-1 relative">
							<span class="text-slate-500 text-sm ">{project.year}</span>
							{"-"}
							<h4 class="font-semibold">{project.title}</h4>
							<div class="absolute top-3 left-13 -rotate-1 -z-10 h-2 w-32 bg-linear-to-r from-amber-300 to-amber-50 transform origin-left scale-x-0 group-hover:scale-x-100 opacity-0 group-hover:opacity-100 transition-transform duration-700 ease-in-out" />
						</a>
						<p class="font-light">{project.description}</p>
					</div>
				</div>
			))}
		</div>
	 </div>

	 <div class="flex flex-col gap-2 mt-8">
		<h1 class="text-xl font-semibold">Experience</h1>
		<div class="flex flex-col gap-4">
			{experience.map((experience, id) => (
				<div class="flex gap-4">
					<span class="text-slate-500 text-sm w-32">{experience.time}</span>
					<div class="max-w-96 flex flex-col mb-1">
						<div class="flex items-center gap-2">
							<h4 class="font-semibold">{experience.company}</h4>
							{"-"}
							<span class="text-slate-500 text-sm ">{experience.location}</span>
						</div>
						<span class="text-slate-500">{experience.role}</span>
					</div>
				</div>
			))}
		</div>
	 </div>

	 
</Layout>
