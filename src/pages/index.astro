---
import type { JSX } from 'astro/jsx-runtime';
import Layout from '../layouts/Layout.astro';
import "../style/global.css";
import { Github, Linkedin } from "@lucide/astro";

// Welcome to Astro! Wondering what to do next? Check out the Astro documentation at https://docs.astro.build
// Don't want to use any of this? Delete everything in this file, the `assets`, `components`, and `layouts` directories, and start fresh.

type ProjectType = {
	title: string;
	description: string;
	year: number;
	link: string;
};

const projects: ProjectType[] = [
	{
		title: "Image Editor App",
		description: "A web application that allows users to edit images directly in the browser using WebAssembly for performance.",
		year: 2025,
		link: "https://alfazh123.github.io/image-editor/wasm"
	},
	{
		title: "PathExplorer",
		description: "Android application to explore careers based on personality types using the RIASEC method.",
		year: 2024,
		link: "https://github.com/PathXplorer-C242-PS289/PathXplorer"
	},
	{
		title: "Assa'adah Campus Expo 2024",
		description: "Website for Assa'adah Campus Expo 2024 event using Next.js and TailwindCSS.",
		year: 2024,
		link: "https://github.com/alfazh123/ace2024"
	},
];

type BlogType = {
	title: string;
	description: string;
	year: number;
	link: string;
};

const blogs: BlogType[] = [
	{
		title: "Built Wasm Package with Rust",
		description: "Tutorial on how to build a WebAssembly package using Rust and integrate it into a web application.",
		year: 2024,
		link: "https://medium.com/@alfazh291/built-wasm-package-with-rust-99c3c76f273e"
	},
]

type ExperienceType = {
	company: string;
	role: string;
	description: string;
	location: string;
	time: string;
}

const experience: ExperienceType[] = [
	{
		company: "Universitas Negeri Surabaya",
		role: "Assistant Laboratory",
		description: "",
		location: "On Site",
		time: "June 2023 - Present",
	},
	{
		company: "Ordo Apps",
		role: "Frontend Developer",
		description: "",
		location: "Hybrid",
		time: "February 2025 - June 2025",
	},
	{
		company: "Bangkit Academy ",
		role: "Android Developer",
		description: "",
		location: "Remote",
		time: "August 2024 - Dec 2024",
	}
]

const techStack: string[] = [
	"JavaScript",
	"TypeScript",
	"Next.Js",
	"TailwindCSS",
	"HTML",
	"CSS",
	"NodeJs",
	"Laravel",
	"WebAssembly",
	"Java",
	"Kotlin",
	"Docker"
];

type SocialType = {
	platform: string;
	url: string;
	icon: any;
}

const social: SocialType[] = [
	{
		platform: "GitHub",
		url: "https://github.com/alfazh123",
		icon: Github,
	},
	{
		platform: "LinkedIn",
		url: "https://www.linkedin.com/in/ahmd-mufahras-li-alfazh-assardew/",
		icon: Linkedin,
	}
]

---

<Layout>
	<!-- <Welcome /> -->
	 <div class="flex flex-col min-h-64 justify-between">
		 <!-- <div class="group flex flex-row gap-4 items-center mb-4">
			</div> -->
			<div class="flex flex-col gap-4 h-64 justify-center">
				<!-- <img src="/profile.png" alt="Profile Picture" width="150" height="150" class="rounded-2xl grayscale hover:grayscale-0 hover:transition-all duration-700 ease-in-out h-12 w-12" /> -->
				<div class="flex flex-col gap-2 relative">
					<h1 class="text-3xl font-semibold">Hi Alfazh here!</h1>
					<div class="absolute h-4 w-36 bg-linear-to-r from-cyan-300 to-cyan-50 top-2 left-14 -rotate-2 -z-10"/>
					<p class="sm:max-w-xl w-full text-lg">I'm FrontEnd Developer Based in Surabaya, Indonesia. I love to create things for the web and always excited to learn new technologies.</p>
					<p class="sm:max-w-xl w-full text-lg text-slate-500">Building simple, accessible interfaces that delight users.</p>
				</div>
				<div class="flex gap-4">
					<!-- <a href="/about" class="">About</a> -->
					<a href="mailto:alfazh.work@gmail.com">Email Me</a>
				</div>
			</div>

	 </div>

	<div class="h-1 w-full bg-linear-to-r from-transparent via-slate-300 to-transparent"></div>

	 <div class="flex flex-col gap-2 mt-8">
		<div>
			<h1 class="text-xl font-semibold">Projects</h1>
			<p class="font-extralight">Here are some of the projects I've worked on recently.</p>
		</div>
		<div class="grid grid-cols-2 gap-4">
			{projects.map((project, id) => (
				<div class="group border rounded-lg p-4 hover:shadow-lg transition-transform duration-300 ease-in-out transform hover:scale-105">
					<div>
						<div class="flex justify-between items-center mb-1 relative">
							<div class="relative">
								<h4 class="font-semibold">{project.title}</h4>
								<div class="absolute left-0 -bottom-2 h-1 w-28 bg-linear-to-r from-cyan-300 to-cyan-50 origin-left scale-x-0 group-hover:scale-x-100 transition-transform duration-300 ease-in-out" />
							</div>
							<span class="bg-slate-200 rounded-sm text-slate-500 text-sm px-2">{project.year}</span>
						</div>
						<p class="font-light text-slate-600">{project.description}</p>
					</div>
					<a href={project.link} class="flex mt-4 items-center text-slate-700 group-hover:text-cyan-600 transition-colors duration-200">
						<span class="mr-2">view</span>
						<span class="transform transition-transform duration-300 group-hover:translate-x-2">→</span>
					</a>
				</div>
			))}
		</div>
	 </div>

	 <div class="flex flex-col gap-2 mt-8">
		<h1 class="text-xl font-semibold">Writting</h1>
		<div class="flex flex-col gap-4">
			{blogs.map((blog, id) => (
				<div class="group flex justify-between items-center border rounded-lg p-4 hover:scale-105 transition-transform duration-300 ease-in-out">
					<div>
						<a href={blog.link} class="flex items-center gap-2 mb-1 relative">
							<span class="text-slate-500 text-sm ">{blog.year}</span>
							{"-"}
							<h4 class="font-semibold">{blog.title}</h4>
							<div class="absolute top-3 left-13 -rotate-1 -z-10 h-2 w-72 bg-linear-to-r from-amber-300 to-amber-50 transform origin-left scale-x-0 group-hover:scale-x-100 opacity-0 group-hover:opacity-100 transition-transform duration-300 ease-in-out" />
						</a>
						<p class="font-light">{blog.description}</p>
					</div>
					<span class="text-2xl">→</span>
				</div>
			))}
		</div>
	 </div>

	<div class="flex flex-col gap-2 mt-8">
		<h1 class="text-xl font-semibold">Experience</h1>
		<div class="flex flex-col gap-4">
			{experience.map((experience, id) => (
				<div class="flex gap-4">
					<span class="text-slate-500 text-sm md:w-72 w-32">{experience.location}</span>
					<div class="flex flex-col mb-1">
						<div class="flex items-center gap-2">
							<h4 class="font-semibold">{experience.company}</h4>
							{"-"}
							<span class="text-slate-500 text-sm ">{experience.time}</span>
						</div>
						<span class="text-slate-500">{experience.role}</span>
					</div>
				</div>
			))}
		</div>
	</div>

	<div>
		<h1 class="text-xl font-semibold">Tech Stack</h1>
		{techStack.map((tech) => (
			<span class="inline-block bg-slate-200 text-slate-700 text-sm px-3 py-1 rounded-full mr-2 mb-2">{tech}</span>
		))}
	</div>

	<footer class="mt-8">
		<div class="flex gap-8">
			<h1 class="text-xl text-slate-600">Social</h1>
			<div class="flex gap-4">
				{social.map((s) => (
					<a href={s.url} aria-label={s.platform} class="text-slate-700 hover:text-cyan-600 transition-colors duration-200">
						<s.icon size={24} />
					</a>
				))}
			</div>
		</div>
	</footer>
</Layout>
